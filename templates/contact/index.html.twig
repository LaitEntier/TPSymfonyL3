{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Objet</th>
                <th>Message</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.Nom }}</td>
                <td>{{ contact.Email }}</td>
                <td>{{ contact.Objet }}</td>
                <td>{{ contact.Message }}</td>
                <td>{{ contact.created|date('d/m/Y') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
