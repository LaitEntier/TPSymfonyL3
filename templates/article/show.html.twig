{% extends 'public/layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>{{ article.title }}</h1>
    <p>Publi√© le {{ article.created ? article.created|date('d/m/Y') : '' }}</p>
    <img class="img-responsive" src="{{ asset('images/articles/'~ article.image ~'') }}" alt="#" />
    <p>{{ article.content }}</p>

    
    <div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Articles</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for other_article in articles %}
                    {% if other_article.id is not same as(article.id) %}
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <div class="full news_blog">
                                <img class="img-responsive" src="{{ asset('images/articles/'~ other_article.image ~'') }}" alt="#" />
                                <div class="overlay">><a class="main_bt transparent" href="{{ path('article_show', { 'id' : other_article.id }) }}">Voir</a></div>
                                <div class="blog_details">
                                    <h3>{{ other_article.title }}</h3>
                                    <p>pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
